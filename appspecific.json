version: 0.0
os: linux
files:
  - source: /    # Source directory in the deployment package
    destination: /var/www/html/  # Destination directory on the EC2 instance
hooks:
  BeforeInstall:
    - location: scripts/before_install.sh
      timeout: 300
      runas: root
  AfterInstall:
    - location: scripts/after_install.sh
      timeout: 300
      runas: root
